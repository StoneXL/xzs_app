<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwitchButton">
        <attr name="bmWidth" format="dimension"></attr>
        <attr name="bmHeight" format="dimension"></attr>
    </declare-styleable>


    <declare-styleable name="TabLayoutPlus">
        <attr name="subTextSize" format="dimension|reference" />
        <attr name="countTextColor" format="color|reference" />
        <attr name="countTextSize" format="dimension|reference" />
        <attr name="countTextBackground" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="pet_iconShow" format="integer"/>
        <attr name="pet_iconHide" format="integer"/>
        <attr format="reference" name="start"/>
        <attr format="dimension" name="pad"/>
    </declare-styleable>


    <declare-styleable name="Switch">
        <attr name="checked" format="reference|boolean"/>
        <attr name="switchOnColor" format="reference|color"/>
        <attr name="switchOffColor" format="reference|color"/>
        <attr name="spotOnColor" format="reference|color"/>
        <attr name="spotOnColorIn" format="reference|color"/>
        <attr name="spotOffColor" format="reference|color"/>
        <attr name="spotOffColorIn" format="reference|color"/>
        <attr name="switchOnStrokeColor" format="reference|color"/>
        <attr name="switchOffStrokeColor" format="reference|color"/>
        <attr name="spotPadding" format="reference|dimension"/>
        <attr name="duration" format="reference|integer" />
    </declare-styleable>

    <!-- 公共监控 -->
    <declare-styleable name="LoadingTextView">
        <attr name="textStyle">
            <enum name="noText" value="-1" />
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gravity" format="integer" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textPadding" format="dimension" />
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="textColor" />
        <attr name="background" format="reference" />
        <attr name="backButton" format="reference" />
    </declare-styleable>
    <declare-styleable name="LeftRightTextView">
        <attr name="left_text_size" format="dimension"/>
        <attr name="left_text_color" format="reference"/>
        <attr name="left_text" format="string"/>
        <attr name="right_text_size" format="dimension"/>
        <attr name="right_text_color" format="reference"/>
        <attr name="right_text" format="string"/>
        <attr name="right_text_margin_left" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="AlignLeftRightTextView">
        <attr name="left_text"/>
        <attr name="left_text_color"/>
        <attr name="left_text_size"/>
        <attr name="right_text"/>
        <attr name="right_text_color"/>
        <attr name="right_text_size"/>
        <attr name="show_dash" format="boolean"/>
        <attr name="show_badge" format="boolean"/>
        <attr name="badge" format="string"/>
        <attr name="margin_left_right" format="dimension|integer"/>

    </declare-styleable>
    <declare-styleable name="LeftImgTextView">
        <attr name="right_text"/>
        <attr name="right_text_color"/>
        <attr name="right_text_size"/>
        <attr name="left_drawable" format="reference"/>
    </declare-styleable>
    <declare-styleable name="DayView">
        <attr name="week_view" format="boolean"/>
    </declare-styleable>
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>
    <declare-styleable name="ShapedImageView">
        <attr name="shape_mode" format="enum">
            <enum name="round_rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>
</resources>