<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    tools:context="com.yxld.xzs.activity.patrol.PatrolRecordActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/item_patrol_record_full"/>
        <TextView
            android:id="@+id/tv_save_data"
            android:layout_width="820px"
            android:layout_height="130px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="130px"
            android:layout_marginTop="100px"
            android:background="@drawable/shape_btn_save_patrol_record"
            android:clickable="false"
            android:gravity="center"
            android:text="保存数据"
            android:textColor="@color/white"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v4.widget.NestedScrollView>
