<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <com.yxld.xzs.view.AutoCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        app:cardCornerRadius="10px">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/camera_image"
                    android:layout_width="match_parent"
                    android:layout_height="500px"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_camera" />

                <com.yxld.xzs.view.ShapedButton
                    android:id="@+id/camera_bufang"
                    android:layout_width="200px"
                    android:layout_height="84px"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="18px"
                    android:background="#00000000"
                    android:text="未布防"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="40px"
                    app:round_radius="14px"
                    app:shape_mode="round_rect" />

                <com.yxld.xzs.view.ShapedButton
                    android:id="@+id/camera_status"
                    android:layout_width="200px"
                    android:layout_height="84px"
                    android:layout_marginRight="20px"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="40px"
                    android:background="#00000000"
                    android:text="未在线"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="40px"
                    app:round_radius="14px"
                    app:shape_mode="round_rect" />

                <com.yxld.xzs.view.ShapedButton
                    android:id="@+id/camera_name"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="18px"
                    android:layout_marginRight="40px"
                    android:background="#000000"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="40px"
                    app:round_radius="14px"
                    app:shape_mode="round_rect" />
            </com.zhy.autolayout.AutoFrameLayout>

            <com.yxld.xzs.view.DrawableCenterTextView
                android:id="@+id/camera_video"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@color/common_grey_line_color"
                android:drawableLeft="@mipmap/camera_video"
                android:drawablePadding="18px"
                android:gravity="center_vertical"
                android:text="录像视频"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/color_646464"
                android:textSize="44px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.yxld.xzs.view.AutoCardView>
</com.zhy.autolayout.AutoLinearLayout>
