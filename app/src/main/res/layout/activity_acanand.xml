<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="316px"
        android:layout_height="218px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216px"
        android:src="@mipmap/computer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="526px"
        android:text="欣社区后台网页登录确认"
        android:textColor="@color/color_333333"
        android:textSize="44px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="604px"
        android:text="为保障账户安全 请确保是本人操作"
        android:textColor="@color/color_B2B1B6"
        android:textSize="44px"/>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="928px"
        android:layout_height="124px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="288px"
        android:background="@mipmap/saomaloginbg"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="44px"/>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="928px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="取消"
        android:layout_marginBottom="120px"
        android:textColor="@color/color_666666"
        android:textSize="44px"/>

</com.zhy.autolayout.AutoRelativeLayout>