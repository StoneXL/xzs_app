<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/auto_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginTop="36px"
        android:background="@drawable/bg_blue_radius_8">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="95px"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="60px"/>

        <TextView

            android:id="@+id/tv_jiedanzhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="24px"
            android:layout_marginTop="36px"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="54px"/>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="233px"
            android:layout_height="233px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:src="@mipmap/icon_avatar"
            />

        <ch.ielse.view.SwitchView
            android:id="@+id/SwitchButton"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_alignBottom="@+id/tv_jiedanzhuangtai"
            android:layout_marginLeft="100px"
            android:layout_toRightOf="@id/tv_jiedanzhuangtai"
            app:isOpened="true"
            app:primaryColor="@color/main_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <!--<FrameLayout-->
    <!--android:id="@+id/layout_header"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <!--<include-->
    <!--layout="@layout/nav_header_main"/>-->
    <!--</FrameLayout>-->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36px"
        android:background="@color/white"
        >
    </android.support.v7.widget.RecyclerView>


</com.zhy.autolayout.AutoLinearLayout>