<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="48px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45px"
                        android:layout_marginTop="40px"
                        android:text="订单"
                        android:textColor="@color/color_333333"
                        android:textSize="45px"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_rob"
                                style="@style/workbench_image"
                                android:src="@mipmap/work_rob"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_rob"
                                android:text="待抢单"
                                />

                            <TextView
                                android:id="@+id/count_1"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_rob"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_take"
                                style="@style/workbench_image"
                                android:src="@mipmap/work_take"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_take"
                                android:text="待取货"/>

                            <TextView
                                android:id="@+id/count_2"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_take"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_send"
                                style="@style/workbench_image"
                                android:src="@mipmap/work_send"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_work_send"
                                android:text="待送达"/>

                            <TextView
                                android:id="@+id/count_3"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_send"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="90px"
                    android:background="@color/color_e5e5e5"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="48px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45px"
                        android:layout_marginTop="40px"
                        android:text="审核"
                        android:textColor="@color/color_333333"
                        android:textSize="45px"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_check_off"
                                style="@style/workbench_image"
                                android:src="@mipmap/check_off"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_check_off"
                                android:text="未审批"/>

                            <TextView
                                android:id="@+id/count_4"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_check_off"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_check_on"
                                style="@style/workbench_image"
                                android:src="@mipmap/check_on"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_check_on"
                                android:text="已审批"
                                />

                            <TextView
                                android:id="@+id/count_5"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_check_on"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_check_on1"
                                    style="@style/workbench_image"
                                    android:src="@mipmap/dianziquan"/>

                                <TextView
                                    style="@style/workbench_text"
                                    android:layout_below="@+id/iv_check_on1"
                                    android:text="电子券审批"
                                    />
                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48px"
                        android:orientation="horizontal">


                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_tousu"
                                style="@style/workbench_image"
                                android:src="@mipmap/tousujianyi"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_tousu"
                                android:text="投诉建议"
                                />

                            <TextView
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_seek"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>
                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_pandian"
                                style="@style/workbench_image"
                                android:src="@mipmap/pandian"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_pandian"
                                android:text="商品盘点"
                                />

                            <TextView
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_seek"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        </com.zhy.autolayout.AutoRelativeLayout>

                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="90px"
                    android:background="@color/color_e5e5e5"/>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="48px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45px"
                        android:layout_marginTop="40px"
                        android:text="常用"
                        android:textColor="@color/color_333333"
                        android:textSize="45px"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_safemanage"
                                style="@style/workbench_image"
                                android:src="@mipmap/safemanage"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_safemanage"
                                android:text="居家安防"
                                />

                            <TextView
                                android:id="@+id/count_6"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_safemanage"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_wacth_area"
                                style="@style/workbench_image"
                                android:src="@mipmap/work_wacth_area"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_wacth_area"
                                android:text="区域监控"
                                />

                            <TextView
                                android:id="@+id/count_7"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_wacth_area"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_wacth_room"
                                style="@style/workbench_image"
                                android:src="@mipmap/work_wacth_room"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_wacth_room"
                                android:text="岗位监控"
                                />

                            <TextView
                                android:id="@+id/count_8"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_wacth_room"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48px"
                        android:orientation="horizontal">


                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_wuyebx"
                                style="@style/workbench_image"
                                android:src="@mipmap/icon_work_wuyebx"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_wuyebx"
                                android:text="物业报修"
                                />

                            <TextView
                                android:id="@+id/count_9"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_work_seek"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_entrancecard"
                                style="@style/workbench_image"
                                android:src="@mipmap/entrancecard"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_entrancecard"
                                android:text="特殊门禁"
                                />

                            <TextView
                                android:id="@+id/count_10"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_entrancecard"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_rim"
                                style="@style/workbench_image"
                                android:src="@mipmap/zhoubianshangjia"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_rim"
                                android:text="周边商家"
                                />

                            <TextView
                                android:id="@+id/count_11"
                                style="@style/workbench_redpoint"
                                android:layout_toRightOf="@+id/iv_rim"
                                android:text="0"/>
                        </com.zhy.autolayout.AutoRelativeLayout>
                    </com.zhy.autolayout.AutoLinearLayout>


                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:background="@color/color_e5e5e5"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="48px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45px"
                        android:layout_marginTop="40px"
                        android:text="夜间"
                        android:textColor="@color/color_333333"
                        android:textSize="45px"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_moon"
                                style="@style/workbench_image"
                                android:src="@mipmap/icon_work_moon"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_moon"
                                android:text="夜间订单"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_moonorder"
                                style="@style/workbench_image"
                                android:src="@mipmap/icon_word_moonorder"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_moonorder"
                                android:text="夜间出库单"
                                />

                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="90px"
                    android:background="@color/color_e5e5e5"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="48px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45px"
                        android:layout_marginTop="40px"
                        android:text="巡检"
                        android:textColor="@color/color_333333"
                        android:textSize="45px"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_work_seek"
                                style="@style/workbench_image"
                                android:src="@mipmap/work_seek"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_work_seek"
                                android:text="巡检任务"/>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_xunjiandian"
                                style="@style/workbench_image"
                                android:src="@mipmap/icon_work_addxunjian"/>

                            <TextView
                                style="@style/workbench_text"
                                android:layout_below="@+id/iv_xunjiandian"
                                android:text="新增巡检点"
                                />

                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="90px"
                    android:background="@color/color_e5e5e5"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</com.zhy.autolayout.AutoLinearLayout>