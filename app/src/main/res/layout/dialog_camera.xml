<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/auto_ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124px"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="176px"
            android:layout_height="176px"
            android:src="@mipmap/camera_intelligent_online_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61px"
            android:text="设备配网"
            android:textColor="#333333"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/auto_ll_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62px"
        android:layout_marginTop="62px"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="176px"
            android:layout_height="176px"
            android:src="@mipmap/camera_manually_to_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61px"
            android:text="添加设备"
            android:textColor="#333333"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/auto_ll_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124px"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="176px"
            android:layout_height="176px"
            android:src="@mipmap/work_wacth_area"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61px"
            android:text="有线设备"
            android:textColor="#333333"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>