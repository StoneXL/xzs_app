<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160px"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector_click_recycler_item_bg"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="80px"
        android:gravity="center_horizontal"
        >
        <View
            android:id="@+id/line_up"
            android:layout_width="6px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_patrol_flow_line"
            />
        <TextView
            android:id="@+id/tv_serial_num"
            android:layout_width="64px"
            android:layout_height="64px"
            android:background="@drawable/selector_bg_patrol_flow"
            android:gravity="center"
            tools:text="1"
            android:textSize="36px"
            android:textColor="@color/color_666666"
            />
        <View
            android:id="@+id/line_dowm"
            android:layout_width="6px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_patrol_flow_line"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="中远公关一号楼正门"
                android:textSize="44px"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_check_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="44px"
                tools:text="未打卡"
                android:maxLines="1"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_ff5654"
                android:layout_toRightOf="@id/tv_address"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:layout_marginRight="40px"
                />
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="80px"
                android:src="@mipmap/ic_eye"
                android:tint="@color/color_ff5654"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:id="@+id/iv_eye"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="40px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_c1c1c1"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>