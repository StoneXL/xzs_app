<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_4c000000"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="118px"
            android:background="@color/drawer_blue_new"
            android:gravity="center"
            android:text="选择配送员"
            android:textColor="@color/white"
            android:textSize="40px"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_deliveryman"
            android:layout_width="match_parent"
            android:layout_height="770px">

        </android.support.v7.widget.RecyclerView>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_confirm_deliveryman"
                android:layout_width="290px"
                android:layout_height="138px"
                android:layout_alignParentRight="true"
                android:background="@color/color_337CDF"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="44px"/>
        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>