<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:text="请输入审批意见"
            android:textColor="@color/white"
            android:textSize="44px"/>


        <EditText
            android:id="@+id/et_opinion"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@mipmap/splb"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@mipmap/bg_transparent"/>

        <Button
            android:id="@+id/bt_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:background="@null"
            android:text="确定"
            android:textColor="#585858"
            android:textSize="48px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@mipmap/bg_transparent"/>

        <Button
            android:id="@+id/bt_confirm_nopass"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/main_color"
            android:textSize="48px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@mipmap/bg_transparent"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>