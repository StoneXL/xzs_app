<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/auto_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32px"
        android:orientation="vertical">

        <com.yxld.xzs.view.AlignLeftRightTextView
            android:id="@+id/tv_time_and_check_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:margin_left_right="40px"
            app:right_text="查看巡检结果"
            app:right_text_color="@color/color_007bc2"
            app:right_text_size="48px"
            app:show_dash="false" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="123px">

            <com.yxld.xzs.view.LeftRightTextView
                android:id="@+id/tv_xunjian_jihua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                app:left_text="巡检计划:"
                app:left_text_color="@color/color_666666"
                app:right_text_color="@color/color_333333" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="123px">

            <com.yxld.xzs.view.LeftRightTextView
                android:id="@+id/tv_patrol_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                app:left_text="巡检路线:"
                app:left_text_color="@color/color_666666"
                app:right_text_color="@color/color_333333" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="123px">

            <com.yxld.xzs.view.LeftRightTextView
                android:id="@+id/tv_patrol_use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                app:left_text="巡检用时:"
                app:left_text_color="@color/color_666666"
                app:right_text_color="@color/color_333333" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="123px">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.yxld.xzs.view.LeftRightTextView
                    android:id="@+id/tv_patrol_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:gravity="center_vertical"
                    app:left_text="巡检人员:"
                    app:left_text_color="@color/color_666666"
                    app:right_text_color="@color/color_333333"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_upload_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:background="@drawable/shape_red_radius_50px"
                    android:gravity="center"
                    android:text="上传本次结果"
                    android:textColor="@color/color_ff5654"
                    android:textSize="44px"
                    android:visibility="gone"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>