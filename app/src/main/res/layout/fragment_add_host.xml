                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20px"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/arrow_bottom"
                            android:gravity="center"
                            android:hint="选择单元"
                            />

                        <TextView
