                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="所在项目"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="45px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="45px"
                        android:background="@color/color_999999"
                        />

                    <TextView
                        android:id="@+id/tv_xiangmu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40px"
                        android:drawableRight="@mipmap/arrow_bottom"
                        android:gravity="center_vertical"
                        android:hint="请选择项目"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_f0f0f0"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="134px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="主机名称"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="45px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="45px"
                        android:background="@color/color_999999"
                        />

                    <EditText
                        android:id="@+id/et_zhujiming"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40px"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入名称"
                        android:textSize="45px"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_f0f0f0"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="134px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="主机类型"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="45px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="45px"
                        android:background="@color/color_999999"
                        />

                    <CheckBox
                        android:id="@+id/ck_liuliang"
                        android:layout_width="55px"
                        android:layout_height="55px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/checkbox_selector"
                        android:button="@null"
                        android:checked="true"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="40px"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="流量版本"
                        android:textSize="45px"
                        />

                    <CheckBox
                        android:id="@+id/ck_wifi"
                        android:layout_width="55px"
                        android:layout_height="55px"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/checkbox_selector"
                        android:button="@null"
                        android:checked="false"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="40px"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="WiFi版本"
                        android:textSize="45px"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_f0f0f0"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="134px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="MAC地址"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="45px"
                        android:layout_marginLeft="15px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="45px"
                        android:background="@color/color_999999"
                        />

                    <EditText
                        android:id="@+id/et_mac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40px"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklnmopqrstuvwxwzABCDEFGHIJKLNMOPQRSTUVWXWZ"
                        android:gravity="center_vertical"
                        android:hint="请输入主机的MAC地址"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textSize="45px"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
