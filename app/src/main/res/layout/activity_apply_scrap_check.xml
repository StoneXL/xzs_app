<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context="com.yxld.xzs.activity.Navigation.ApplyScrapCheckActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/layout_apply_scrap_check_header"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="26px"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="121px">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@color/white"
                android:padding="40px"
                android:gravity="center_vertical"
                >
                <View
                    android:layout_width="8px"
                    android:layout_height="36px"
                    android:background="@color/color_0079c2"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="报废商品列表"
                    android:textSize="36px"
                    android:textColor="@color/color_0079c2"
                    android:layout_marginLeft="16px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_d6d7dc"
                android:layout_marginLeft="40px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            app:layoutManager="LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <com.zhy.autolayout.AutoRelativeLayout
            android:padding="40px"
            android:layout_marginTop="26px"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="328px">
            <TextView
                android:id="@+id/tv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:"
                />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_toRightOf="@id/tv_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28px"
                android:background="@drawable/bg_apply_scrap_check_market"
                >
                <com.yxld.xzs.view.MyEditTextView
                    android:id="@+id/edit_market"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="248px"
                    android:textSize="30px"
                    android:textColor="@color/color_646464"
                    android:background="@null"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="136px">
            <TextView
                android:id="@+id/tv_pass"
                android:text="通过"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/color_0079C2"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_unpass"
                android:text="不通过"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/color_c7c7cc"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v4.widget.NestedScrollView>
