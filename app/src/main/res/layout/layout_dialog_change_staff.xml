<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="@color/color_007ac0">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40px"
            android:textColor="@color/white"
            android:textSize="38px"
            android:text="人员更换" />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="128px">
        <TextView
            android:id="@+id/tv_xunxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡一线"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            />
        <TextView
            android:id="@+id/tv_xun_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_xun_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00-19:00"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/recyclerview_bg"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="40px"
        android:layout_height="600px">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_margin="2px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"
            />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
       android:layout_margin="40px"
        >
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="120px"
            android:layout_height="60px"
            android:textSize="32px"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue_radius_50"
            />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginLeft="30px"
            android:layout_width="120px"
            android:layout_height="60px"
            android:textSize="32px"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_666666"
            android:background="@drawable/bg_gray_radius_50"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>