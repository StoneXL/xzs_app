<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192px"
    android:minHeight="192px"
    android:paddingLeft="34px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="192px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_line_up"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/line"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_name_half"
            android:layout_width="104px"
            android:layout_height="104px"
            android:background="@mipmap/round"
            android:gravity="center"
            android:text="际群"
            android:textColor="@color/white"
            android:textSize="44px"/>

        <ImageView
            android:id="@+id/iv_line_down"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/line"
            android:visibility="visible"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="138px"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="向际群"
                android:textColor="@color/color_333333"
                android:textSize="44px"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:text="发起审批"
                android:textColor="@color/color_333333"
                android:textSize="44px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="正常损坏，通过"
            android:textColor="@color/color_ff4141"
            android:textSize="44px"
            android:visibility="visible"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="34px"
        android:text="09-02 12:00"
        android:textColor="@color/color_999999"
        android:textSize="44px"/>


</com.zhy.autolayout.AutoRelativeLayout>