<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@color/repair_bg">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_gravity="center"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:background="@color/repair_blank"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_sides"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="报修单号"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:textColor="@color/repair_black"
                    android:textSize="40px"/>

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_sides">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="报修时间"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:textColor="@color/repair_black"
                    android:textSize="40px"/>


            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_sides">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="报修地点"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:textColor="@color/repair_black"
                    android:textSize="40px"/>


            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_sides">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="报修人　"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:textColor="@color/repair_black"
                    android:textSize="40px"/>


            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_sides">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="联系电话"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:textColor="@color/repair_black"
                    android:textSize="40px"/>

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="284px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:background="@drawable/layout_line_all">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="报修详情"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="32px"
                    android:gravity="center_vertical"
                    android:textColor="@color/repair_black"
                    android:textSize="40px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="274px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:background="@drawable/layout_line_all">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="业主附图"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <ImageView
                    android:id="@+id/work_image1"
                    android:layout_width="204px"
                    android:layout_height="204px"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="32px"/>

                <ImageView
                    android:id="@+id/work_image2"
                    android:layout_width="204px"
                    android:layout_height="204px"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="32px"/>

                <ImageView
                    android:id="@+id/work_image3"
                    android:layout_width="204px"
                    android:layout_height="204px"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="32px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_layout1"
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_all">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="部    门　"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_bumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:drawableRight="@mipmap/icon_right"
                    android:hint="请选择部门"
                    android:textColor="@color/black"
                    android:textSize="41px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_layout2"
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_all">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="负责人　"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_fuze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:drawableRight="@mipmap/icon_right"
                    android:hint="请选择负责人"
                    android:textColor="@color/black"
                    android:textSize="41px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_layout3"
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/layout_line_all">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="54px"
                    android:text="维修人　"
                    android:textColor="@color/repair_gray"
                    android:textSize="40px"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@color/repair_line"/>


                <TextView
                    android:id="@+id/work_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:drawableRight="@mipmap/icon_right"
                    android:hint="请选择维修工人"
                    android:textColor="@color/black"
                    android:textSize="41px"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

</android.support.v4.widget.NestedScrollView>
    <Button
        android:id="@+id/work_button"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/repair_blue"
        android:text="指派"
        android:textColor="@color/drawer_white"
        android:textSize="44px"/>

</com.zhy.autolayout.AutoRelativeLayout>