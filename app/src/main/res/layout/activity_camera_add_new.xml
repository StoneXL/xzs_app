<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="24px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="所在项目:"
                android:textSize="40px"
                />

            <!--<View-->
            <!--android:layout_width="2px"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginBottom="45px"-->
            <!--android:layout_marginLeft="20px"-->
            <!--android:layout_marginRight="20px"-->
            <!--android:layout_marginTop="45px"-->
            <!--android:background="@color/color_999999"-->
            <!--/>-->

            <TextView
                android:id="@+id/xiangmu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40px"
                android:drawableRight="@mipmap/arrow_bottom"
                android:gravity="center_vertical"
                android:hint="请选择项目"
                android:textSize="40px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_f0f0f0"
            />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="房屋信息:"
                android:textSize="40px"
                />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20px">

                <TextView
                    android:id="@+id/tv_loudong"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/arrow_bottom"
                    android:drawablePadding="8px"
                    android:gravity="center_vertical"
                    android:hint="选择楼栋"
                    android:textSize="40px"
                    />

                <TextView
                    android:id="@+id/tv_danyaun"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/arrow_bottom"
                    android:drawablePadding="8px"
                    android:gravity="center_vertical"
                    android:hint="选择单元"
                    android:textSize="40px"
                    />

                <TextView
                    android:id="@+id/tv_fanghao"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/arrow_bottom"
                    android:drawablePadding="8px"
                    android:gravity="center_vertical"
                    android:hint="选择房号"
                    android:textSize="40px"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_f0f0f0"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="业主电话:"
                android:textSize="40px"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40px"
                android:drawableRight="@mipmap/arrow_bottom"
                android:gravity="center_vertical"
                android:hint="请绑定业主电话"
                android:textSize="40px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_f0f0f0"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="设备序列号:"
                android:textSize="40px"
                />


            <com.yxld.xzs.view.DeleteEditText
                android:id="@+id/device_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入设备ID"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="40px"/>


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_f0f0f0"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="设备名称:"
                android:textSize="40px"
                />

            <com.yxld.xzs.view.DeleteEditText
                android:id="@+id/device_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入设备名称"
                android:maxLength="15"
                android:maxLines="1"
                android:textSize="40px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_f0f0f0"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="设备密码:"
                android:textSize="40px"
                />

            <com.yxld.xzs.view.DeleteEditText
                android:id="@+id/device_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:digits="0123456789"
                android:hint="请输入设备密码"
                android:inputType="number"
                android:maxLength="15"
                android:maxLines="1"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_f0f0f0"
            />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:text="设备没有设置密码,初次连接设备需要设置密码"
            android:textSize="30px"
            android:layout_marginBottom="24px"
            android:visibility="gone"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80px"
        android:background="@mipmap/sendbtnsure"
        android:text="添加"
        android:textColor="@color/white"
        />

