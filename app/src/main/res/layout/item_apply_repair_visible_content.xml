<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="vertical"
        android:padding="40px"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_repair_num_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报修单号:"
                android:textSize="36px"
                android:textColor="@color/color_909090"
                />
            <TextView
                android:id="@+id/tv_repair_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:textColor="@color/color_323232"
                android:text="123455665432"
                android:layout_marginLeft="28px"
                android:layout_toRightOf="@id/tv_repair_num_desc"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/color_0079C2"
                android:text="未出库"
                android:layout_alignParentRight="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:layout_marginTop="28px"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    style="@style/TextView30_909090"
                    android:text="报修时间:"
                    />
                <TextView
                    style="@style/TextView30_646464"
                    android:text="2017-07-21 10:00:00"
                    android:layout_marginLeft="28px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    style="@style/TextView30_909090"
                    android:text="报修人:"
                    />
                <TextView
                    style="@style/TextView30_646464"
                    android:text="陀螺王"
                    android:layout_marginLeft="28px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/Line1040_right"
        />

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_centerVertical="true"
            android:src="@mipmap/qrdd_dz01" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/TextView40_323232"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@id/icon"
            android:text="中远公馆51区" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>